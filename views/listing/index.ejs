<% layout('layout/boilerplate') %>

<body>
  <h1>All Arts And Crafts</h1>
  <div class="row row-col-lg-4 row row-col-md-3 row row-col-sm-1">

    <% for (let lists of list) { %>
      <div class="card list-card" style="width: 15rem;">
        <div class="image-container">
          <img src="<%= lists.image %>" class="card-img-top image-hover" alt="no image" style="height: 20rem;">
          <div class="overlay">
            <a href="/home/<%= lists._id %>">
              <button type="button" class="btn btn-outline-secondary details-btn">
                <span class="text">See Details</span> <span class="arrow">â†’</span>
              </button>
            </a>
          </div>
        </div>
        <div class="card-body mt-3">
          <b> <%= lists.title %> </b>
        </div>
      </div>
    <% } %>

  </div>
</body>
